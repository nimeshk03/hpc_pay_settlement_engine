# Settlement Engine Environment Variables
# Copy this file to .env and update with your values

# Application
RUST_LOG=info
LOG_FORMAT=json

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=settlement_engine
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/settlement_engine

# Redis
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379

# Kafka
KAFKA_BROKERS=kafka:29092

# Application Settings
APPLICATION_PORT=3000
APPLICATION_LOG_LEVEL=info
