# Settlement Engine Environment Variables
# Copy this file to .env and update with your values

# Application
RUST_LOG=info
LOG_FORMAT=json

# Database
# IMPORTANT: Set POSTGRES_PASSWORD first, then construct DATABASE_URL using that password
# Example: If POSTGRES_PASSWORD=mypass123, then DATABASE_URL=postgresql://postgres:mypass123@postgres:5432/settlement_engine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=settlement_engine
DATABASE_URL=postgresql://postgres:<REPLACE_WITH_POSTGRES_PASSWORD>@postgres:5432/settlement_engine

# Redis
# IMPORTANT: Set REDIS_PASSWORD first, then construct REDIS_URL using that password
# Example: If REDIS_PASSWORD=redispass123, then REDIS_URL=redis://:redispass123@redis:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:<REPLACE_WITH_REDIS_PASSWORD>@redis:6379

# Kafka
KAFKA_BROKERS=kafka:29092

# Application Settings
APPLICATION_PORT=3000
APPLICATION_LOG_LEVEL=info
